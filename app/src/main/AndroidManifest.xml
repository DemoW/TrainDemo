<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="lishui.study">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="lishui.study.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lishui.study.activity.AppTimeUpActivity"
            android:theme="@style/AppTheme.StatusBar"
            android:parentActivityName="lishui.study.activity.MainActivity"/>
        <activity
            android:name="lishui.study.activity.RenderActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="lishui.study.activity.LeakActivity"
            android:theme="@style/AppTheme" />

    </application>

</manifest>