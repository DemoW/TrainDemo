<?xml version="1.0" encoding="utf-8"?>
<lishui.demo.browser.WebViewHeader xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/web_header"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageView
        android:id="@+id/exit_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_back_black"/>

    <EditText
        android:id="@+id/url_text_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/exit_image_view"
        android:layout_toStartOf="@id/action_image_view"
        android:gravity="center_vertical|start"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:inputType="textUri"
        android:textColor="@android:color/black"
        android:textColorHint="@color/header_hint_text_color"
        android:hint="@string/header_hint_text"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/action_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_action_black"
        android:contentDescription="action menu" />

    <View
        android:id="@+id/header_progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/header_progress_bar" />

</lishui.demo.browser.WebViewHeader>